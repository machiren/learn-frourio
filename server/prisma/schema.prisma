datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id         Int       @id @default(autoincrement())
  email      String?
  password   String?
  name       String?
  pictureUrl String?
  provider   String
  providerId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  @@unique([provider, providerId])
  @@unique([email, provider])
}
